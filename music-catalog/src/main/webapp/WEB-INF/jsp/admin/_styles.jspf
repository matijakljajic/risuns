<style>
  :root {
    color-scheme: light;
  }

  * {
    box-sizing: border-box;
  }

  body {
    margin: 0;
    font-family: "Segoe UI", "Inter", Arial, sans-serif;
    background: #f5f6fb;
    color: #111827;
  }

  a {
    color: #0f172a;
    text-decoration: none;
  }

  a:hover {
    text-decoration: underline;
  }

  .admin-header {
    background: #111;
    color: #f5f5f5;
    padding: 18px 28px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 12px;
  }

  .admin-brand {
    font-size: 1.35rem;
    font-weight: 600;
    color: inherit;
  }

  .admin-page-title {
    display: block;
    font-size: 0.95rem;
    color: #d1d5db;
    margin-top: 2px;
  }

  .admin-nav {
    display: flex;
    flex-wrap: wrap;
    gap: 14px;
  }

  .admin-nav a {
    color: #f9fafb;
    font-size: 0.95rem;
    opacity: 0.9;
  }

  .admin-nav a:hover {
    opacity: 1;
  }

  .admin-main {
    padding: 32px 24px 40px;
  }

  .admin-card {
    max-width: 1100px;
    margin: 0 auto;
    background: #fff;
    border: 1px solid #e4e7ef;
    box-shadow: 0 20px 35px rgba(15, 23, 42, 0.08);
    padding: 26px 30px 32px;
    border-radius: 0;
  }

  .admin-card__head {
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
    gap: 16px;
    margin-bottom: 18px;
  }

  .admin-card__head h2 {
    margin: 0;
    font-weight: 600;
    font-size: 1.4rem;
  }

  .admin-card__actions {
    display: flex;
    gap: 12px;
    align-items: center;
    flex-wrap: wrap;
  }

  .admin-filter {
    display: flex;
    flex-wrap: wrap;
    gap: 14px;
    align-items: flex-end;
    margin-bottom: 16px;
  }

  .admin-filter .filter-field {
    display: flex;
    flex-direction: column;
    gap: 4px;
    font-size: 0.8rem;
    letter-spacing: 0.05em;
    text-transform: uppercase;
    color: #6b7280;
  }

  .admin-filter input,
  .admin-filter select {
    min-width: 180px;
    padding: 8px 10px;
    border: 1px solid #cfd5e1;
    font-size: 0.95rem;
  }

  .btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 6px;
    border: none;
    border-radius: 0;
    padding: 8px 16px;
    font-size: 0.95rem;
    cursor: pointer;
    text-decoration: none;
    transition: background 0.15s ease, color 0.15s ease;
