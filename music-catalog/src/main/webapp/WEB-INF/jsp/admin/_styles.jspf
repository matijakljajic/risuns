    width: 100%;
    border-collapse: collapse;
    margin-top: 12px;
  }

  .admin-table th,
  .admin-table td {
    text-align: left;
    padding: 12px 14px;
    border-bottom: 1px solid #edf0f7;
    font-size: 0.95rem;
  }

  .admin-table th {
    text-transform: uppercase;
    font-size: 0.75rem;
    letter-spacing: 0.08em;
    color: #6b7280;
    background: #f8fafc;
  }

  .admin-table tbody tr:hover {
