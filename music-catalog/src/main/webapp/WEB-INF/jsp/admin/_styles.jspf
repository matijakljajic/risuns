  .admin-form input[type="number"],
  .admin-form input[type="url"],
  .admin-form input[type="email"],
  .admin-form textarea,
  .admin-form select {
    width: 100%;
    padding: 10px 12px;
    border: 1px solid #cfd5e1;
    font-size: 0.95rem;
    border-radius: 0;
  }

  .admin-form textarea {
    min-height: 120px;
    resize: vertical;
  }

  .admin-form .form-row {
    display: flex;
    flex-direction: column;
  }

  .admin-form .form-actions {
    display: flex;
    gap: 12px;
    flex-wrap: wrap;
    margin-top: 8px;
  }

  .form-errors {
    margin-top: 16px;
    padding: 12px 14px;
    border: 1px solid #fecaca;
    background: #fef2f2;
    color: #991b1b;
    border-radius: 0;
  }

  .empty-state {
    padding: 32px;
    text-align: center;
    color: #6b7280;
    border: 1px dashed #dbe0ea;
    border-radius: 0;
  }

  .helper-text {
    font-size: 0.85rem;
    color: #6b7280;
  }
</style>
