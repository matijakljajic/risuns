    background: #111;
    color: #f8fafc;
  }

  .btn-primary:hover {
    background: #1f1f1f;
  }

  .btn-secondary {
    background: #e4e7ef;
    color: #111827;
  }

  .btn-secondary:hover {
    background: #d7dae4;
  }

  .btn-danger {
    background: #dc2626;
    color: #fff;
  }

  .btn-danger:hover {
    background: #b91c1c;
  }

  .btn-link {
    border: none;
    background: none;
    color: #0f172a;
    cursor: pointer;
    font-size: 0.9rem;
    text-decoration: underline;
    padding: 0;
  }

